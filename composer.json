{
    "name": "axstrad/test-bundle",
    "type": "symfony-bundle",
    "description": "Symfony 2 bundle for testing the other Axstrad bundles",
    "keywords": ["axstrad", "test"],

    "license": "MIT",
    "authors": [
        {
            "name": "Dan Kempster",
            "email": "dev@dankempster.co.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4",
        "phpunit/phpunit": "~4.1",
        "symfony/symfony": "~2.3"
    },

    "autoload": {
        "psr-4": {
            "Axstrad\\Bundle\\TestBundle\\": ""
        }
    },

    "minimum-stability": "dev",
    "prefer-stable": true,

    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev",
            "dev-develop": "0.2.x-dev"
        }
    },

    "archive": {
        "exclude": [
            ".gitignore",
            ".scrutinizer.yml",
            ".travis.yml",
            "Tests",
            "build",
            "phpunit.xml*",
            "vendor"
        ]
    }
}
